<%- include('../partials/header') %>
<h4>Welcome to BREW NATION! </br>Stay logged in to search breweries, add reviews, and check-in for a one-time free beer offer!</h4>
  <p id="drink-responsibly">YOU MUST BE OF LEGAL DRINKING AGE TO ENTER THIS SITE. YOUR INFORMATION WILL NOT BE STORED. PLEASE DRINK RESPONSIBLY.</p>
<table id="list">
    <thead>
      <tr>
        <th class="table-headers">User</th>
        <th class="table-headers">Brewery</th>
        <th class="table-headers">City, State</th>
      </tr>
    </thead>
    <tbody>
      <% breweries.forEach(function(brewery) { %>
        <tr>
          <td class="brewery-user"><img alt="avatar" src="<%= brewery.userAvatar %>" referrerpolicy="no-referrer" >&nbsp;<%= brewery.userName %></td>
          <td><%= brewery.name %></td>
          <td><%= brewery.location %></td>
          <td><a href="/breweries/<%= brewery._id %>">Details</a></td>
          <td><a href="/breweries/<%= brewery._id%>/checkins/new">Check-In</a></td>
          <td>
            <% if (user && brewery.user.equals(user._id)) { %>
            <form action="/breweries/<%= brewery._id %>?_method=DELETE" method="POST">
              <button type="submit" id="remove">Remove Brewery</button>
            </form>
            <% } %>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    
    


<%- include('../partials/footer') %>
